{
  "manifest_version": 3,
  "name": "Gemini Model Switch",
  "version": "1.0",
  "description": "Switch between Gemini models with a keyboard shortcut.",
  "icons": {
      "32": "images/gemini-switch-icon-32.png",
      "128": "images/gemini-switch-icon-128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-model": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Switch between Gemini models"
    }
  }
}
